#//Challenge 4 FizzBuzz

for (var i=0; i<=100; i++) {
  if (i%3===0) {
    if (i%5 === 0) {
      console.log ("BuzzFizz");
    } else
      console.log ("Fizz");
  } else if (i%5 ===0) {
    console.log("Buzz");
    
  } else
  console.log(i);
}
